<Window x:Class="WPF_TCP_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Client" Height="500" Width="800" Background="#f0f0f0">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <!-- Chat Messages List -->
        <ListBox x:Name="ChatMessages" Grid.Row="0" Grid.ColumnSpan="2"
                 Margin="0,0,0,10"
                 Background="White"
                 BorderBrush="#ccc"
                 BorderThickness="1"
                 Padding="10" />

        <!-- Message Input -->
        <TextBox x:Name="MessageInput" Grid.Row="1" Grid.Column="0"
                 Height="40"
                 Margin="0,0,10,0"
                 VerticalContentAlignment="Center"
                 FontSize="14"
                 Padding="5"
                 BorderBrush="#ccc"
                 BorderThickness="1" />

        <!-- Send Button -->
        <Button Content="Send" Grid.Row="1" Grid.Column="1"
                Height="40"
                Background="#0078D7"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="#005A9E"
                BorderThickness="1"
                Cursor="Hand"
                Click="SendMessage_Click" />
    </Grid>
</Window>